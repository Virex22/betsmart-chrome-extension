{
  "manifest_version": 3,
  "name": "BetSmart Analyzer",
  "version": "1.0",
  "description": "Analysez les matchs de football pour des paris plus intelligents.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "minimum_chrome_version": "80"
}
